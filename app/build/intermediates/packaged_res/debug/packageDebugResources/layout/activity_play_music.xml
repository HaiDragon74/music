<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcr_play_music"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".presentation.ui.activity.PlayMusicActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:tint="@color/white"
        android:id="@+id/img_down"
        app:layout_constraintHeight_percent="0.06"
        style="?android:attr/imageButtonStyle"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/action_image"
        android:src="@drawable/ic_down"/>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/img_down"
        app:cardCornerRadius="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/linear_title_song"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/cv_img_play"
        android:layout_marginTop="24dp">
        <ImageView
            android:id="@+id/img_playSong"
            android:layout_width="match_parent"
            android:contentDescription="@string/imagePlaySong"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintHeight_percent="0.12"
        android:id="@+id/linear_title_song"
        app:layout_constraintTop_toBottomOf="@+id/cv_img_play"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titlePlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/title_music"
            android:textColor="@color/color_play_title_song"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_artistPlay"
            android:text="@string/artist_music"
            android:textColor="@color/color_play__artist_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:id="@+id/linear_action"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintBottom_toTopOf="@id/relativeLayout_seek"
        app:layout_constraintTop_toBottomOf="@+id/linear_title_song"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/img_favorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bcr_on_click_action_bottom"
                android:contentDescription="@string/add_favorite"
                android:src="@drawable/ic_favorite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_add_album"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/img_add_album"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bcr_on_click_action_bottom"
                android:contentDescription="@string/previous"
                app:tint="@color/white"
                android:src="@drawable/ic_previous"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_equalizer"
                app:layout_constraintStart_toEndOf="@id/img_favorite"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_equalizer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/white"
                android:background="@drawable/bcr_on_click_action_bottom"
                android:contentDescription="@string/ispPay"
                android:src="@drawable/ic_pause"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_time_play"
                app:layout_constraintStart_toEndOf="@id/img_add_album"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_time_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bcr_on_click_action_bottom"
                app:tint="@color/white"
                android:contentDescription="@string/next"
                android:src="@drawable/ic_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_queue"
                app:layout_constraintStart_toEndOf="@id/img_equalizer"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_queue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bcr_on_click_action_bottom"
                android:contentDescription="@string/add_album"
                app:tint="@color/white"
                android:src="@drawable/ic_add_album"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_time_play"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintHeight_percent="0.05"
        android:id="@+id/relativeLayout_seek"
        app:layout_constraintTop_toBottomOf="@+id/linear_action"
        android:layout_height="0dp">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tv_duration_end"
            android:layout_toEndOf="@id/tv_duration_start"
            android:max="100"
            android:progress="0"
            android:padding="8dp"
            android:progressTint="#FF4081"
            android:progressBackgroundTint="#555555" />

        <TextView
            android:id="@+id/tv_duration_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_duration_end"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:textSize="15sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_seek"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/img_favorite_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bcr_on_click_action_bottom"
                android:contentDescription="@string/add_favorite"
                app:tint="@color/white"
                android:src="@drawable/ic_favorite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_previous_play"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_previous_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bcr_on_click_action_bottom"
                android:contentDescription="@string/previous"
                android:src="@drawable/ic_previous"
                app:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_pause_play"
                app:layout_constraintStart_toEndOf="@id/img_favorite_play"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_pause_play"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/bcr_on_click_action_bottom"
                android:contentDescription="@string/ispPay"
                app:tint="@color/white"
                android:src="@drawable/ic_pause"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_next_play"
                app:layout_constraintStart_toEndOf="@id/img_previous_play"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_next_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bcr_on_click_action_bottom"
                android:contentDescription="@string/next"
                android:src="@drawable/ic_next"
                app:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgBt_album"
                app:layout_constraintStart_toEndOf="@id/img_pause_play"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imgBt_album"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bcr_on_click_action_bottom"
                android:contentDescription="@string/add_album"
                android:src="@drawable/ic_add_album"
                app:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_next_play"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>