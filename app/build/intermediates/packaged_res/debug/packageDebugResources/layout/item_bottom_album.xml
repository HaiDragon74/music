<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/img_avt_bottom"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/img_avt_bottom"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avt_album" />

    <TextView
        android:id="@+id/tv_bottom_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/img_add_bottom"
        android:layout_toEndOf="@id/img_avt_bottom"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="@string/name_bottom_album"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/img_add_bottom"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bcr_on_click_action_bottom"
        android:contentDescription="@string/add_bottom_album"
        android:src="@drawable/ic_add" />

</RelativeLayout>