<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_song_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout_tv_song"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1">

        <ImageView
            android:id="@+id/img_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bcr_click_item_song"
            android:contentDescription="@string/image_music"
            android:scaleType="centerCrop" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_song_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="end|bottom"
            app:lottie_rawRes="@raw/animation_play" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout_tv_song"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/img_menu"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/cv_song_home"
        app:layout_constraintTop_toBottomOf="@id/cv_song_home">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:fontFamily="@font/roboto_light"
            android:text="@string/title_music"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:fontFamily="@font/roboto_light"
            android:lines="1"
            android:text="@string/artist_music"
            android:textColor="@color/white_artist"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/img_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cv_song_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/img_menu"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cv_song_home"
        app:layout_constraintStart_toEndOf="@id/linearLayout_tv_song"
        app:layout_constraintTop_toBottomOf="@id/cv_song_home"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>